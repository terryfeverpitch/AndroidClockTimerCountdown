<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tabhost"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
    	<TabWidget 
    		android:id="@android:id/tabs"
    		android:layout_width="fill_parent"
	      	android:layout_height="wrap_content">
    	</TabWidget>
    	
    	<FrameLayout 
    		android:id="@android:id/tabcontent"
      		android:layout_width="fill_parent"
      		android:layout_height="fill_parent">
      		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/clock"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">
				<com.ClockTimerCountdown.Clock
					android:layout_height="fill_parent" 
					android:layout_width="fill_parent" >
				</com.ClockTimerCountdown.Clock>
			</LinearLayout>
      		<RelativeLayout
      			android:id="@+id/timer"
      			android:orientation="vertical"
       			android:layout_width="fill_parent" 
        		android:layout_height="fill_parent">
        		<LinearLayout
        			android:orientation="horizontal"
        			android:layout_width="fill_parent" 
        			android:layout_height="wrap_content">
	      			<TextView 
	      				android:id="@+id/timer_h"
	      				android:layout_height="wrap_content" 
	      				android:layout_width="fill_parent"
	      				android:layout_weight="1"
	      				android:text="00h" 
	      				android:gravity="center"
	      				android:textSize="20dp">
	      			</TextView>
	      			<TextView 
	      				android:id="@+id/timer_m"
	      				android:layout_height="wrap_content" 	 
	      				android:layout_width="fill_parent"
	      				android:layout_weight="1" 
	      				android:text="00m"	 
	      				android:gravity="center"
	      				android:textSize="20dp">
	      			</TextView>
	      			<TextView 
	      				android:id="@+id/timer_s"
	      				android:layout_height="wrap_content" 
	      				android:layout_width="fill_parent"
	      				android:layout_weight="1"
	      				android:text="00s" 	  
	      				android:gravity="center"
	      				android:textSize="20dp">
	      			</TextView>
      			</LinearLayout>
      			<LinearLayout
      				android:orientation="horizontal"
	    			android:layout_width="fill_parent"
	    			android:layout_height="wrap_content" 
	    			android:layout_alignParentBottom="true" >
	      			<Button 
	      				android:id="@+id/timer_btn_start"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content" 
						android:text="start" 
						android:textSize="20dp"
						android:layout_weight="1"
						android:background="@drawable/button" >
					</Button>
					<Button 
						android:id="@+id/timer_btn_stop"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content" 
						android:text="stop" 
						android:textSize="20dp"
						android:layout_weight="1"
						android:background="@drawable/button" >
					</Button>
				</LinearLayout>
      		</RelativeLayout>
      		
      		<RelativeLayout
      			android:id="@+id/countdown"
      			android:orientation="vertical"
       			android:layout_width="fill_parent" 
        		android:layout_height="fill_parent">
        		
        		<LinearLayout
        			android:orientation="horizontal"
        			android:layout_width="fill_parent" 
        			android:layout_height="wrap_content" >
	      			<TextView 
	      				android:layout_height="wrap_content" 
	      				android:layout_width="fill_parent"
	      				android:layout_weight="3"
	      				android:text="Msgï¼š" 
	      				android:textSize="20dp" >
	      			</TextView>
	      			<EditText 
	      				android:id="@+id/countdown_et_msg"
				    	android:layout_height="wrap_content"
				    	android:layout_width="fill_parent" 
				    	android:layout_weight="1" 
				    	android:textColor="#FFFFFF"
				    	android:text="Time's up." 
				    	android:background="@drawable/shape"
				    	android:ellipsize="end" >
	    			</EditText>
      			</LinearLayout>
		
        		<LinearLayout
        			android:orientation="horizontal"
        			android:layout_width="fill_parent" 
        			android:layout_height="wrap_content"
        			android:layout_centerVertical="true">
	      			<TextView 
	      				android:id="@+id/countdown_h"
	      				android:layout_height="wrap_content" 
	      				android:layout_width="fill_parent"
	      				android:layout_weight="1"
	      				android:text="00h" 
	      				android:textSize="20dp"
	      				android:gravity="center"
	      				android:background="@drawable/shape" >
	      			</TextView>
	      			<TextView 
	      				android:id="@+id/countdown_m"
	      				android:layout_height="wrap_content" 	 
	      				android:layout_width="fill_parent" 
	      				android:layout_weight="1"
	      				android:text="00m"	 
	      				android:textSize="20dp"
	      				android:gravity="center"
	      				android:background="@drawable/shape">
	      			</TextView>
	      			<TextView 
	      				android:id="@+id/countdown_s"
	      				android:layout_height="wrap_content" 
	      				android:layout_width="fill_parent"  	
	      				android:layout_weight="1"			
	      				android:text="00s" 	  
	      				android:textSize="20dp"
	      				android:gravity="center"
	      				android:background="@drawable/shape">
	      			</TextView>
      			</LinearLayout>
      			<LinearLayout
      				android:orientation="horizontal"
	    			android:layout_width="fill_parent"
	    			android:layout_height="wrap_content" 
	    			android:layout_alignParentBottom="true">
	      			<Button 
	      				android:id="@+id/countdown_btn_restart"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content" 
						android:text="restart" 
						android:textSize="20dp"
						android:layout_weight="1"
						android:background="@drawable/button" 
					/>
					<Button 
						android:id="@+id/countdown_btn_start"
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content" 
						android:text="start" 
						android:textSize="20dp"
						android:layout_weight="1"
						android:background="@drawable/button"
					/>
				</LinearLayout>
      		</RelativeLayout>
    	</FrameLayout>
  	</LinearLayout>
</TabHost>